<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppHappy" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- cambiamos  (style name="Theme.AppHappy" parent="Theme.MaterialComponents.DayNight.DarkActionBar")
        por (style name="Theme.AppHappy" parent="Theme.MaterialComponents.DayNight.NoActionBar) para eliminar la barra superior de la app-->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/terra</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>